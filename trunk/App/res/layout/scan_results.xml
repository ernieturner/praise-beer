<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/rating"
    android:id="@+id/beerRatingOverview"
    android:padding="10px">

    <RelativeLayout
      android:layout_height="wrap_content"
      android:id="@+id/beerNameAndDetails"
      android:layout_width="fill_parent">
      
      <TextView
        android:id="@+id/beerName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="15sp"
        android:typeface="serif"/>
      <TextView
        android:id="@+id/beerStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_below="@id/beerName"
        android:gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:typeface="serif"/>
      <TextView
        android:id="@+id/beerABV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_below="@id/beerStyle"
        android:layout_marginTop="10sp"
        android:typeface="serif" android:gravity="center_horizontal"/>
  </RelativeLayout>
   
  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:id="@+id/beerNameAndDetails" android:focusableInTouchMode="true" android:layout_alignParentBottom="true">
      
      <TextView
        android:id="@+id/communityRating"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:gravity="left"
        android:layout_marginLeft="45sp"
        android:typeface="serif"
        android:layout_weight="1"/>
      <TextView
        android:id="@+id/brothersRating"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_alignRight="@id/communityRating"
        android:gravity="right"
        android:layout_marginRight="45sp"
        android:typeface="serif"
        android:layout_weight="1"/>
      <TextView
        android:id="@+id/communityRatingName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:layout_below="@id/communityRating"
        android:gravity="left"
        android:textColor="#000000"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:typeface="serif"
        android:layout_weight="1"/>
     <TextView
        android:id="@+id/brothersRatingName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:layout_below="@id/brothersRating"
        android:layout_alignRight="@id/communityRatingName"
        android:gravity="right"
        android:textColor="#000000"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:typeface="serif"
        android:layout_weight="1"/>
        
        <TextView
        android:id="@+id/communityRatingCount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@id/communityRatingName"
        android:gravity="left"
        android:textColor="#000000"
        android:layout_marginTop="7sp"
        android:layout_marginLeft="20sp"
        android:typeface="serif"
        android:layout_weight="1"/>
        
      <Button
        android:id="@+id/viewBeerPage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="View Full Beer Rating Page - TODO"
        android:textSize="15sp"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:layout_below="@id/communityRatingCount"
        android:layout_marginTop="20sp"
        android:typeface="serif"/>
      <Button
        android:id="@+id/findOtherSimilarStyles"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="View Similar Beers by Style - TODO"
        android:textColor="#000000"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        android:layout_below="@id/viewBeerPage"
        android:layout_marginTop="10sp"
        android:typeface="serif"/>
  </RelativeLayout>
</RelativeLayout>