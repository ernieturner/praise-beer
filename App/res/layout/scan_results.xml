<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FillParentVertical"
    android:background="@drawable/rating">
	
	<!-- START Beer name and information -->
	  <LinearLayout 
	    style="@style/FillParentVertical"
	    android:layout_weight="4">
	    <TextView
	        android:id="@+id/beerName"
	        style="@style/WhiteRowCenterText"
	        android:textSize="22sp"
	        android:layout_marginTop="15sp"
	        android:layout_weight="3"/>

        <LinearLayout
            style="@style/FillParentHorizontal"
            android:layout_weight="3">
            
            <TextView 
	            android:id="@+id/beerStyle"
	            style="@style/WhiteRowCenterText"
	            android:textSize="16sp"
	            android:layout_weight="1"/>
            <TextView
	            android:id="@+id/beerABV"
	            style="@style/WhiteRowCenterText"
	            android:textSize="16sp"
	            android:layout_weight="1"/>
        </LinearLayout>

	  </LinearLayout>
	<!-- END Beer name and information -->
	
	<!-- START Ratings Section-->
	  <LinearLayout 
	    style="@style/FillParentVertical"
	    android:layout_weight="2">
	    <LinearLayout
	        style="@style/FillParentHorizontal"
	        android:layout_weight="3">
	        <TextView
	            android:id="@+id/communityRating"
	            style="@style/BlackRowCenterLargeText"
	            android:layout_weight="1"/>
	                
	        <TextView 
	            android:id="@+id/brothersRating"
	            style="@style/BlackRowCenterLargeText"
	            android:layout_weight="1"/>
	    </LinearLayout>
	    
	    <LinearLayout
	        style="@style/FillParentHorizontal"
	        android:layout_weight="3">
	        <TextView
	            android:id="@+id/communityRatingName"
	            style="@style/BlackRowCenterMediumText"
	            android:layout_weight="1"/>
	        
	        <TextView
	            android:id="@+id/brothersRatingName"
	            style="@style/BlackRowCenterMediumText"
	            android:layout_weight="1"/>
	    </LinearLayout>
	    
	    <LinearLayout
            style="@style/FillParentHorizontal"
            android:layout_weight="4">
            <TextView
                android:id="@+id/beerAdvocateLink"
                style="@style/BlackRowCenterSmallText"
                android:text="@string/beerAdvocateAttribution"
                android:autoLink="web"
                android:layout_weight="1"/>
        </LinearLayout>
        
        <LinearLayout
            style="@style/FillParentHorizontal"
            android:layout_weight="4">
            <TextView
                android:id="@+id/layoutSpacer"
                style="@style/BlackRowCenterSmallText"
                android:layout_weight="1"/>
        </LinearLayout>
	    
	  </LinearLayout>
	<!-- END Ratings Section-->
	
</LinearLayout>